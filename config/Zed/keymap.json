// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock",
      "ctrl-shift-b": "workspace::ToggleLeftDock",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      "space f": "file_finder::Toggle",
      "space s": "project_symbols::Toggle",
      "space e": "project_panel::ToggleFocus",
      "space g": "git_panel::ToggleFocus",
      "space a": "outline_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      "ctrl-shift-j": ["editor::SelectNext", { "replace_newest": false }], // editor.action.addSelectionToNextFindMatch
      "ctrl-shift-k": ["editor::SelectPrevious", { "replace_newest": false }] // editor.action.addSelectionToPreviousFindMatch
    }
  }
]
